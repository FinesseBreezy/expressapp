<!DOCTYPE html>
<html>
<head>
  <% include ./partials/head %>
</head>
<body>
  <header>
    <% include ./partials/nav %>
  </header>
  <div class='row'>
    <div class='input-add'>
      <h3>add Hobby</h3>
      <form action='/hobbies' method='POST'>
        <input type='text' name='title' placeholder='Hobby' class="form-control"/>
        <button class='btn-primary' type='submit'>Add</button>
      </div>
    </div>
  </form>
  <table class='table col m8 s12'>
    <thead>
      <th>Title</th>
      <th>Edit</th>
      <th>x</th>
    </thead>
    <tbody>
      <% hobbies.forEach( function(hobby) { %>
        <% var url = "/hobbies/" + hobby.id + "?_method=DELETE" %>
        <% var editUrl = "/hobbies/" + hobby.id + "/edit" %>
        <tr>
          <td><%= hobby.hobby %></td>
          <td>
            <a class="btn btn-primary" href=<%= editUrl %>>Edit</a>
          </td>
          <td>
            <form method="POST" action=<%= url %> >
              <button class="btn btn-danger">Delete</button>
            </form>
          </td>
          <% }); %>
        </tbody>
      </table>
    </body>
    </html>
